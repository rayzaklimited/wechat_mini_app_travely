<!--pages/product/product.wxml-->
<view class="container">

  <view class="offer"> 
      <image  class="image" src="/assets/dubai.jpg"></image>
      <view style="display: flex; flex-direction: column; position: absolute;">
            <view style="flex: 2;">
                  <text >jkgkjgfjhfdg</text>
             </view>
             <view style="flex: 1;">
                  <navigator class="navigator" url="../../redirect/redirect/redirect?title=redirect" 
                  open-type="redirect">JUST-GO</navigator>
             </view>
      </view>
      
  </view>
 
  <view class="list-section">
    <block wx:for="{{offers}}"  wx:key="key">
        <view class="products">
          <view class="block1"> 
              <image  class="image" src="{{item.imgURL}}"></image>
          </view>
          <view style="flex: 2; flex-direction: column; padding: 10rpx;">
              <view class="block2">
                    <view class="block2-1">
                        <view >
                            <text>{{item.country}}</text>
                        </view>
                        <view>
                            <text id="location">{{item.location}}</text>
                        </view>
                    </view>
                    <view class="block2-2">
                        <view>
                            <text id="price" >{{item.price}}$</text>  
                        </view>
                        <view>
                            <i-icon type="collection_fill" size="18" color="#12e663"/>
                            <text id="location">{{item.review}}</text>
                        </view>
                    </view>
                </view>
                <view style="flex: 1; margin-left: 20rpx; ">
                    <text id="desc">{{item.desc}}</text>
                </view>
            </view>
          </view>
    </block>
  </view>
</view>


